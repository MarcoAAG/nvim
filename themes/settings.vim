"*****************************************************************************
"" Visual Settings
"*****************************************************************************
syntax on
set ruler
set number
set rnu		            " relative numbers
set nowrap              " Automatically wrap or not(nowrap) text that extends beyond the screen length.
set cursorline          " highlight the current line
" set cursorcolumn    " highlight the current column
set colorcolumn=120     "set character line limitation
set t_Co=256                            " Support 256 colors
syntax enable

" Select theme
"colorscheme gotham256
"source $HOME/.config/nvim/themes/deus.vim
"source $HOME/.config/nvim/themes/edge.vim
source $HOME/.config/nvim/themes/xcode.vim

" airline
source $HOME/.config/nvim/themes/airline.vim

"" Disable the blinking cursor.
set gcr=a:blinkon0
"" Status bar
set laststatus=2
"" Use modeline overrides
set modeline
set modelines=10

set title
set titleold="Terminal"
set titlestring=%F

